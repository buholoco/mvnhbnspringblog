<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/jsp/layout/layout.jsp">
		<put-attribute name="title" value="Blog" />
		<put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp" />
		<put-attribute name="navigation" value="/WEB-INF/jsp/layout/navigation.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp" />
	</definition>

	<definition name="index" extends="baseLayout">
		<put-attribute name="body">
		  <definition name="post-list" template="/WEB-INF/jsp/post/list.jsp">
		      <put-attribute name="post-show" value="/WEB-INF/jsp/post/show.jsp"/>
		  </definition>
		</put-attribute>		
	</definition>

	<definition name="post-add" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/post/form.jsp" />
	</definition>

	<definition name="post-show" extends="baseLayout">
		<put-attribute name="body" value="/WEB-INF/jsp/post/show.jsp" />
	</definition>
</tiles-definitions>
